<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_dealerName"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:hint="dealer name"
        app:layout_constraintBottom_toTopOf="@+id/vehicleId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_dealerID" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editText_dealerID"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:layout_marginTop="72dp"
        android:hint="dealer id"
        app:layout_constraintBottom_toTopOf="@+id/vehicleId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Dealer"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer ID: "
        app:layout_constraintBottom_toBottomOf="@+id/editText_dealerID"
        app:layout_constraintEnd_toStartOf="@+id/editText_dealerID"
        app:layout_constraintTop_toTopOf="@+id/editText_dealerID" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dealer Name: "
        app:layout_constraintBottom_toBottomOf="@+id/editText_dealerName"
        app:layout_constraintEnd_toStartOf="@+id/editText_dealerName"
        app:layout_constraintTop_toBottomOf="@+id/editText_dealerID" />

    <Button
        android:id="@+id/button_addDealer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Dealer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_dealerName"
        app:layout_constraintVertical_bias="0.768" />

    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_addDealer"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>