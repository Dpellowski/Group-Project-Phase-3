<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:id="@+id/dealer_id"
        android:layout_width="197dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"

        android:focusable="false"
        android:focusableInTouchMode="false"

        android:text="Dealer ID"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="@+id/dealer_status"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dealer_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dealer_status"
        android:layout_width="196dp"
        android:layout_height="31dp"
        android:layout_below="@id/dealer_status"
        android:layout_marginTop="5dp"

        android:focusable="false"
        android:focusableInTouchMode="false"

        android:text="Dealer Status"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.023"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dealer_id" />

    <Switch
        android:id="@+id/switch_activation_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:focusable="false"
        android:focusableInTouchMode="false"

        android:text="Activation"

        app:layout_constraintBottom_toTopOf="@+id/dealer_status"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dealer_id"
        app:layout_constraintTop_toTopOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>